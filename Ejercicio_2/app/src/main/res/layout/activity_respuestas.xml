    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Total de votos"
        android:textAlignment="center"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/lvtot"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"/>
</LinearLayout>